@model Post

@{

}

<div class="col-lg-6">
    <!-- Blog post-->
    <div class="card mb-4">
        <a href="/Post/Details/@Model.PostID"><img class="card-img-top" src="/img/@Model.PostImage" alt="@Model.PostName" /></a>
        <div class="card-body">
            <div class="small text-muted">@Model.CreateDate</div>
            <h2 class="card-title h4">@Model.PostName</h2>
            <p class="card-text">@Model.Description</p>
            <a class="btn btn-primary" href="/Post/Details/@Model.PostID">Read more →</a>
        </div>
    </div>
</div>
