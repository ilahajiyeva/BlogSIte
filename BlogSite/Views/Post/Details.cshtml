@model Post
@{
    ViewData["Title"] = Model.PostName;
}

<h1>Details</h1>

<article>
    <!-- Post header-->
    <header class="mb-4">
        <!-- Post title-->
        <h1 class="fw-bolder mb-1">@Model.PostName</h1>
        <!-- Post meta content-->
        <div class="text-muted fst-italic mb-2">
            Posted on @Model.CreateDate
        </div>
        <!-- Post categories-->
        <a class="badge bg-secondary text-decoration-none link-light" href="#!">Web Design</a>
        <a class="badge bg-secondary text-decoration-none link-light" href="#!">Freebies</a>
    </header>
    <!-- Preview image figure-->
    <figure class="mb-4"><img class="img-fluid rounded" src="/img/@Model.PostImage" alt="@Model.PostName" /></figure>
    <!-- Post content-->
    <section class="mb-5">
        @Model.Description
    </section>
</article>